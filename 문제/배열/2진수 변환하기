

case1)
#include <stdio.h>
int main(){
    int n, i, aList[1000]={0,};
    int len=0;
    scanf("%d", &n);
    if(n==1)
    printf("%d", n);
    else{
        for(i=0; n>0; i++){
            aList[i] = n%2;
            n = n/2;
            len++;
        }
    }
    for(i=len-1; i>=0; i--){
        printf("%d", aList[i]);
    }
    
}


case2)
#include <stdio.h>
int main(){
    int n,i,j,cnt=0;
    scanf("%d", &n);
    int arr[255];
    if(n==0)
    printf("0");
    
    while(n>0){
        arr[i] = n%2;
        n = n/2;
        i++;
        cnt++;
    
        
    }
    for(int j= cnt-1; j>=0; j--){
        printf("%d", arr[j]);
    }
}
